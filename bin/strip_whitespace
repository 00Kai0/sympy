#! /usr/bin/env python

def strip_file(filename):
    lines = open(filename).readlines()
    f = open(filename, "w")
    for line in lines:
        f.write(line.rstrip()+"\n")

def main():
    from optparse import OptionParser
    p = OptionParser("usage: %prog [options] filename")
    options, args = p.parse_args()
    if len(args) == 1:
        strip_file(args[0])
    else:
        p.print_help()

if __name__ == "__main__":
    main()
